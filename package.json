{
  "name": "node-image-loader",
  "description": "The Node.js Loader like next-image-loader",
  "version": "0.0.0",
  "type": "module",
  "sideEffects": false,
  "repository": "https://github.com/mizdra/node-image-loader.git",
  "author": "mizdra <pp.mizdra@gmail.com>",
  "license": "MIT",
  "private": true,
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      }
    }
  },
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "dev": "npm run build && node bin/example-command.js",
    "lint": "run-s -c lint:*",
    "lint:tsc": "tsc",
    "lint:biome": "biome check .",
    "test": "vitest"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.6.3",
    "@tsconfig/node18": "^1.0.1",
    "@tsconfig/strictest": "^2.0.0",
    "@types/node": "^18.15.11",
    "npm-run-all2": "^6.1.2",
    "typescript": "^5.0.4",
    "vitest": "^0.30.1",
    "vitest-github-actions-reporter": "^0.10.0"
  },
  "overrides": {
    "tsconfig-paths": "^4.0.0"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "bin": {
    "example-command": "bin/example-command.js"
  },
  "keywords": [],
  "files": ["bin", "src", "!src/**/*.test.ts", "!src/**/__snapshots__", "dist"]
}
